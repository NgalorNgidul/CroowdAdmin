<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel styleName="fullbox">
		<table class="fullbox">
			<tr>
				<td class="halfbox">
					<div class="compositebox">
						<div class="fieldtitle">Nama proyek</div>
						<g:TextBox styleName="fieldtextbox" ui:field="title" />
					</div>
					<div class="compositebox">
						<div class="fieldtitle">Lokasi</div>
						<g:TextBox styleName="fieldtextbox" ui:field="location" />
					</div>
					<div class="compositebox">
						<div class="fieldtitle">Kebutuhan</div>
						<g:TextBox styleName="fieldtextbox" ui:field="strPrincipal" />
					</div>
					<div class="compositebox">
						<div class="fieldtitle">Tenor</div>
						<g:TextBox styleName="fieldtextbox" ui:field="strTenor" />
					</div>
					<div class="compositebox">
						<div class="fieldtitle">Keterangan singkat</div>
						<g:TextBox styleName="fieldtextbox" ui:field="shortDescription" />
					</div>
					<div class="compositebox">
						<div class="fieldtitle">Keterangan</div>
						<g:TextBox styleName="fieldtextbox" ui:field="description" />
					</div>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder> 